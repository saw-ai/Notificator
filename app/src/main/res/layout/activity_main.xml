<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.sawspade.notificator.notificator.MainActivity">



    <Button android:id="@+id/btnBackUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK UP">
    </Button>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:id="@+id/editText2"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_below="@+id/btnClearNotification"/>
    <Button
            android:text="delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClickStop"
            android:id="@+id/btnClearNotification"
            android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:id="@+id/textView2" android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_below="@+id/editText2" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <Button android:id="@+id/btnCharrge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="charge"
            android:elevation="23dp"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true">
    </Button>

</RelativeLayout>
